<p class="text-success"><%= notice %></p>

<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4">
      <% if @book.cover_image.present? %>
        <%= image_tag @book.cover_image.url, alt: @book.title, class: "img-fluid", style: "max-width: 378px; max-height: 378px;" %> <!-- Imagen del libro -->
      <% else %>
        <div class="placeholder-image" style="width: 100%; height: 378px; background-color: #f8f9fa;"></div>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h2 class="card-title"><%= @book.title %></h2>
        <h4 class="card-subtitle mb-2 text-muted">Author: <%= link_to @book.author.name, @book.author %></h4>

        <!-- Mostrar imagen del autor si estÃ¡ presente -->
        <% if @book.author.image.present? %>
          <%= image_tag @book.author.image.url, alt: @book.author.name, class: "img-thumbnail mb-2", style: "max-width: 150px; max-height: 150px;" %> <!-- Imagen del autor -->
        <% end %>

        <p class="card-text"><strong>Summary:</strong> <%= @book.summary %></p>
        <p class="card-text"><strong>Published on:</strong> <%= @book.date_of_publication %></p>

        <%= link_to "Edit this book", edit_book_path(@book), class: "btn btn-warning" %>
        <%= link_to "Back to books", books_path, class: "btn btn-secondary" %>
        <%= button_to "Destroy this book", @book, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
