<p style="color: green"><%= notice %></p>

<h1 style="margin-left: 10px">Authors</h1>

<div> <%= link_to "New Author", new_author_path, class: "btn btn-primary" %> </div>

<table class="table" style= "margin-left: 10px">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">View Details</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each_with_index do |autor, index| %>
      <tr>
        <td><%= index + 1 + (params[:page].to_i - 1) * 10 %></td>

        <td><%= autor.name %></td>
        <td><%= link_to "View Details", autor, class: "btn btn-primary" %></td>
        <td><%= link_to "Edit", edit_author_path(autor), class: "btn btn-secondary" %></td>
        <td><%= button_to "Delete", autor, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pagination">
  <% if params[:page].to_i > 1 %>
    <%= link_to "Previous", authors_path(page: params[:page].to_i - 1), class: "btn btn-primary" %>
  <% end %>

  <% if @total_authors > params[:page].to_i * 15 %>
    <%= link_to "Next", authors_path(page: params[:page].to_i + 1), class: "btn btn-primary" %>
  <% end %>
</div>
