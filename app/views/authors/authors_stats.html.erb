<!-- app/views/authors/authors_stats.html.erb -->
<div class="container mt-5">
  <h1 class="mb-4">Author Stats</h1>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Author</th>
          <th>Number of Books</th>
          <th>Average Score</th>
          <th>Total Sales</th>
        </tr>
      </thead>
      <tbody>
        <% @stats.each do |stat| %>
          <tr>
            <td><%= stat['name'] %></td>
            <td><%= stat['number_of_books'] %></td>
            <td><%= stat['average_score'] %></td>
            <td><%= stat['total_sales'] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
